<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape
                    android:shape="oval">
                    <solid
                        android:color="@color/auction_color" />
                    <stroke android:width="4dp"
                        android:color="@color/auction_color"/>
                    <size
                        android:width="80dp"
                        android:height="80dp"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/auction"
                android:height="40dp"
                android:width="40dp"
                android:gravity="center">
            </item>
        </layer-list>
    </item>
</selector>

