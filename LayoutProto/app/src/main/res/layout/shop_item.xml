<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- 여기에 있는 요소들은 쇼핑몰 추가시 입력한 데이터대로 동적으로 바뀌어야함 -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shopIcon"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@drawable/auction"
        android:layout_weight="0.5"
        app:civ_border_color="#FFCCCCCC"
        app:civ_border_width="2dp"
        android:minWidth="0dp"
        android:minHeight="0dp"/>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#BDBDBD"/>


    <!-- 글자수 많아지면 리니어 레이아웃은 공간이 늘어남, 렐러티브 레이아웃 사용 -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="옥션"
            android:textColor="#000000"/>
    </RelativeLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#BDBDBD"/>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/shopId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="아이디"
            android:textColor="#000000"/>
    </RelativeLayout>


    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#BDBDBD"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/shopSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="연동현황"
            android:textColor="#000000"/>
    </RelativeLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#BDBDBD"/>

    <Button
        android:id="@+id/shophomeButton"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/shop_home_button"
        android:layout_weight="0.5"
        android:scaleType="centerCrop" />


</LinearLayout>